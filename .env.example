# API Provider Keys (at least one required)
OPENAI_API_KEY=sk-your-openai-key-here
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
ANTHROPIC_API_KEY=your-anthropic-key-here

# Web Search Integration (optional)
SERPAPI_KEY=your-serpapi-key
GOOGLE_CSE_API_KEY=your-google-cse-key
GOOGLE_CSE_ENGINE_ID=your-search-engine-id

# Memory & Storage Settings (optional)
MEMORY_PERSIST_DIRECTORY=./memory
VECTOR_DB_DIRECTORY=./memory/vector_db
USE_VECTOR_DB=true
DEFAULT_SEARCH_RESULTS=5
MAX_PAGINATION_LIMIT=50

# File Index Plugin Settings (optional)
ALLOWED_DIRECTORIES=.
MAX_FILE_SIZE_MB=10

# Application Settings (optional)
APP_TITLE=Semantic Kernel UI
DEBUG_MODE=false
TEMPERATURE=0.7
MAX_TOKENS=2000

# Document Intelligence Settings (optional)
ENABLE_DOCUMENT_INTELLIGENCE=true
ENABLE_LLM_CLASSIFICATION=true
ENABLE_TESSERACT_OCR=true
ENABLE_AZURE_DOC_INTELLIGENCE=false

# Tesseract OCR Settings (optional - local, free OCR)
# Install: pip install pytesseract pillow pdf2image
# System: brew install tesseract (macOS) or apt-get install tesseract-ocr (Ubuntu)
TESSERACT_CMD=  # Leave empty for auto-detect, or set path like /usr/local/bin/tesseract
TESSERACT_LANGUAGES=eng+fin+swe  # Languages: eng, fin, swe, deu, fra, etc.

# Azure AI Document Intelligence Settings (optional - cloud, production-grade)
AZURE_DOC_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOC_INTELLIGENCE_KEY=your-azure-doc-intelligence-key

# Performance Settings
DOC_INTELLIGENCE_MAX_CONTENT_LENGTH=10000
DOC_INTELLIGENCE_CACHE_RESULTS=true
